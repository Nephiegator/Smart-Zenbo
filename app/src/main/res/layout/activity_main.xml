<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mLabel"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="50dp"
            android:text="Month" />

        <TextView
            android:id="@+id/yLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Year"
            android:gravity="end"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        app:compactCalendarTargetHeight="300dp"
        app:compactCalendarTextSize="20sp"
        app:compactCalendarBackgroundColor="#303980"
        app:compactCalendarTextColor="#fff"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#7AC0F7"
        app:compactCalendarCurrentDayBackgroundColor="#5264C9"
        app:compactCalendarMultiEventIndicatorColor="#03A9F4"
        />
    <include
        android:id="@+id/include"
        layout="@layout/bottomnavigation"
        android:layout_width="411dp"
        android:layout_height="675dp" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="61dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="#414886"
        fab:menu_colorRipple="#3F51B5"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_storm"
            fab:fab_label="Weather Report"
            fab:fab_size="mini"
            app:fab_colorNormal="#fff"
            app:fab_colorPressed="#3E97F3"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_newspaper"
            fab:fab_label="News Report"
            fab:fab_size="mini"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="#3E97F3"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_appointment"
            android:tint="@color/two"
            fab:fab_label="Appointment"
            fab:fab_size="mini"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="#3E97F3"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pills"
            android:tint="@color/two"
            fab:fab_label="Take a Pills"
            fab:fab_size="mini"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="#3E97F3"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/floating_btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ring"
            android:tint="@color/two"
            fab:fab_label="Reminder"
            fab:fab_size="mini"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="#3E97F3"/>


    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
