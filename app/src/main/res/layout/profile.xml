<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppBarTextColor">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/profile_layout"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/head_layout"
            android:orientation="vertical">

            <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/com_facebook_button_login_silver_background_color"
            android:textSize="20dp"
            tools:text="text"
            android:fontFamily="@font/codebold"/>

            </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">


            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Nickname"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp"
                    tools:text="   text" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Email"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp" />



                <TextView
                    android:id="@+id/view_email"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/cloudlight"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    tools:text="text" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="User"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/view_user"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp"
                    tools:text="text" />
            </TableRow>


            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Birthday"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/view_bdate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="16dp"
                    tools:text="text"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Relation"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/view_relation"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="16dp"
                    tools:text="text"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Gender"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/view_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/cloudlight"
                    android:textSize="16dp"
                    tools:text="text"
                    android:layout_weight="1"/>
            </TableRow>

        </TableLayout>


        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@drawable/bottomnavigation_color"
        app:itemTextColor="@drawable/bottomnavigation_color"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />
</RelativeLayout>