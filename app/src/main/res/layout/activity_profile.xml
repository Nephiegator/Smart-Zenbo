<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightblue">

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/profile_layout">

            <ImageView
                android:id="@+id/imageView_profile"
                android:layout_width="171dp"
                android:layout_height="114dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/user" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/username_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@fonts/eligiblesansregular"
                android:hint="  Nickname"
                android:theme="@style/TextInput"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:theme="@style/TextInput">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/fname_profile"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@fonts/eligiblesansregular"
                    android:hint=" First Name" />

                <android.support.design.widget.TextInputEditText
                    android:fontFamily="@fonts/eligiblesansregular"
                    android:id="@+id/lname_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=" Last Name"
                    android:theme="@style/TextInput"/>
            </LinearLayout>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/phone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@fonts/eligiblesansregular"
                android:hint="  Phone Number"
                android:inputType="number"
                android:theme="@style/TextInput"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:theme="@style/TextInput">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textSize="18dp"
                    android:fontFamily="@fonts/eligiblesansregular"/>
                <EditText
                    android:id="@+id/day_profile"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:textSize="18dp"
                    android:fontFamily="@fonts/eligiblesansregular"/>
                <EditText
                    android:id="@+id/month_profile"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="18dp"
                    android:fontFamily="@fonts/eligiblesansregular"/>
                <EditText
                    android:id="@+id/year_profile"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="date" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD MM YYYY"
                android:fontFamily="@fonts/eligiblesansregular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/save_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Save"
                android:textColor="@color/white"
                android:background="@color/mediume_persian"/>

        </LinearLayout>

    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@color/bottomnav_item"
        app:itemTextColor="@color/bottomnav_item"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />
</android.support.constraint.ConstraintLayout>